<!DOCTYPE html>
<html>
  <head>
    <title>Dodaj przetarg</title>
    <link rel='stylesheet' href='/public/stylesheets/style.css' />
  </head>
  <body>
    <h1>Formularz dodawania przetargu</h1>

    <% if (success === 1) { %>
      <p>Pomyślnie dodano przetarg!</p>
    <% } %>

    <form action="" method="post">
      <div class="form-group">
        <label for="tender_name">Nazwa przetargu</label>
        <input type="text" class="form-control" name="tender_name" id="tender_name" placeholder="Podaj nazwę przetargu">
      </div>
      <div class="form-group">
        <label for="start_date">Data rozpoczęcia przetargu</label>
        <input type="datetime-local" class="form-control" name="start_date" id="start_date">
      </div>
      <div class="form-group">
        <label for="end_date">Data zakończenia przetargu</label>
        <input type="datetime-local" class="form-control" name="end_date" id="end_date">
      </div>
      <div class="form-group">
        <label for="desc">Opis przetargu (opcjonalnie)</label>
        <input type="text" class="form-control" name="desc" id="desc" placeholder="Krótki opis przetargu">
      </div>
      <div class="form-group">
        <label for="budget">Budżet</label>
        <input type="number" step="0.01" class="form-control" name="budget" id="budget" placeholder="Budżet">
      </div>
      <div class="form-group">
        <label for="ca">Instytuacja zamawiająca</label>
        <select id="ca" name="ca">
          <% ca.forEach(function(c) { %>
            <option value="<%= c.id %>"><%= c.name %></option>
          <% }); %>
        </select>
      </div>

      <button type="submit" class="btn btn-primary">Prześlij</button>
    </form>

  </body>
</html>
